{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "pretty": true,
    "lib": ["es6","dom"],
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
    ],
    "paths": {
      "@core/*": ["core/*"],
      "@util/*": ["util/*"],
      "@kernel/*": ["kernel/*"]
    }
  },
  "exclude": [
    "node_modules",
    "script/*",
    "**/*.spec.ts"
  ]
}
